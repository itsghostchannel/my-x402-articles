# Recipient Wallet Configuration
# IMPORTANT: Set your actual Solana wallet address to receive payments
MY_WALLET_ADDRESS=YOUR_RECIPIENT_WALLET_ADDRESS_HERE

# Content Configuration
# Path to articles directory relative to backend root
ARTICLES_PATH=./articles

# Vercel KV Configuration (Optional - for production)
# Leave empty to use in-memory fallback
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Development Settings
DEBUG=cms:*
LOG_LEVEL=info

# Security Settings
# Optional: Add CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Payment Configuration
DEFAULT_ARTICLE_COST=0.10
BUDGET_DEPOSIT_MINIMUM=0.50
BUDGET_DEPOSIT_MAXIMUM=1000.00
PAYMENT_DESCRIPTION=CMS Article Access

# Currency Configuration
CURRENCY_SYMBOL=$
CURRENCY_NAME=USDC

# Rate Limiting Configuration
RATE_LIMIT_GENERAL_MAX=200
RATE_LIMIT_GENERAL_WINDOW=900000
RATE_LIMIT_PAYMENT_MAX=10
RATE_LIMIT_PAYMENT_WINDOW=900000
RATE_LIMIT_BUDGET_MAX=30
RATE_LIMIT_BUDGET_WINDOW=900000
RATE_LIMIT_ARTICLE_MAX=50
RATE_LIMIT_ARTICLE_WINDOW=900000

# Cache Configuration
CACHE_TTL=300000
BUDGET_TTL=300000
ENABLE_CACHE=true